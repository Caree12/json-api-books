<html>
<head>
	<script type="text/javascript" src="/js/jquery.js"></script>
</head>
<body>

	<div class="">
		<div class="">
			<div class="header">Book List<span class="count"></span></div>
				<ul class="books-list hidden">
					<% allBooks.forEach(function(book){ %>
						<li>
							<div class="product">
								<p class="productName"><%- book.name %></p>
							</div>

							<div class="product">
								<p class="productName"><%- book.author %></p>
							</div>

							<div class="product">
								<p class="productName"><%- book.date %></p>
							</div>
						</li>
					<% }); %>
				</ul>

				<div class="error"></div>

			<form>	
				<div class="">
					<input type="text" name="name" placeholder="Book Name"></input>
				</div>

				<div class="">
					<input type="text" name="author" placeholder="Author's Name"></input>
				</div>

				<div class="">
					<input type="text" name="date" placeholder="Publication Date"></input>
				</div>

				<input class="btn" type="submit"></input>
			</form>

		</div>	
	</div>
	<script type="text/javascript" src="/js/post.js"></script>


</body>
</html>
